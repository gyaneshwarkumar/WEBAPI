  <ItemGroup>
    <TypeScriptCompile Include="ClientApp\app\components\batch\batch-list.component.ts" />
    <TypeScriptCompile Include="ClientApp\app\components\course\course-list.component.ts" />
    <TypeScriptCompile Include="ClientApp\app\components\login\login.component.ts" />
    <TypeScriptCompile Include="ClientApp\app\components\Registration\signup-list.component.ts" />
